        private readonly IServiceClient _repository;

        public <#=Model.EntityName#>Controller()
        {
            // Default to REST unless clientProtocol specified as SOAP
            if (String.Compare(WebConfigurationManager.AppSettings["vhasf:ClientProtocol"], "soap", true) == 0)
                _repository = new SoapServiceClient<ISoap<#=Model.EntityName#>Service>(new Soap<#=Model.EntityName#>ServiceClient());
            else
                _repository = new RestServiceClient<ISoap<#=Model.EntityName#>Service>();
        }

        public ActionResult Index()
