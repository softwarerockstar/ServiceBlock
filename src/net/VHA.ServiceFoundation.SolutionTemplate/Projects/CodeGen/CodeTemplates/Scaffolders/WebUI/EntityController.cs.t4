                }

                var request = new <#=Model.EntityName#>AddOrUpdateRequest { Entities = new <#=Model.EntityName#>[] { entity } };
                var response = _repository.Add<<#=Model.EntityName#>AddOrUpdateRequest, <#=Model.EntityName#>AddOrUpdateResponse>(request);
				return Json(new { Result = "OK", Record = response.Result[0] });

            }
            catch (InvalidOperationException ex)
            {
                return Json(new
                {
